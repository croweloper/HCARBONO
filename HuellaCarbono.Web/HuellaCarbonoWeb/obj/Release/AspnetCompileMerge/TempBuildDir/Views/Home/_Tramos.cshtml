@using BE = HuellaCarbono.BE;

 
<div class="row card-body">
 
    <div class="col-1 col-sm-1 col-md-1 col-lg-1 align-self-end">
        <button type="button" class="btn btn-danger" style="width: 30px; height: 30px; padding: 0px 0px; border-radius: 15px; text-align: center; font-size: 12px; color:white;    background-color:red;"> -</button>
    </div>
 
    <div class="col-9 col-sm-4 col-md-4 col-lg-4 align-self-end" style="padding-left:inherit;">
        <label>Punto A - B</label>
        @{
            if (ViewBag.TipoTransporte != null && ViewBag.TipoTransporte.Count > 0)
            {
                foreach (BE.TipoTransporteBE item in ViewBag.TipoTransporte)
                {
                    @item.IdTipoTransporte
                    <br />
                    @item.Descripcion
                    <br />
                }
            }
        }
 
    </div>
 
    <div class="col-1 col-sm-1 col-md-1 col-lg-1 align-self-end">

        <img src="~/Content/images/mapa.png" width="40" height="40" />
    </div>

    <div class="col-12 col-sm-3 col-md-3 col-lg-3">
        <label>Hora:Minuto</label>
        <input type="time" placeholder="Hora:Minuto" value="Hora:Minuto" class="form-control">
    </div>

    <div class="col-12 col-sm-3 col-md-3 col-lg-3 align-self-end">
        <input type="number" placeholder="Costo" min="0" value="Costo" step=".10" class="form-control" />
    </div>
</div>


 
